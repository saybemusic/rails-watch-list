<div class="hero_banner d-flex flex-column align-items-center justify-content-center text-center">
  <h1 class="display-5 fw-bold">Save any kind of movies</h1>
  <p class="lead mb-4">Classic</p>
</div>

<div class="container my-3 d-flex">
  <div class="col-8">
    <h2>My Lists</h2>
    <div class="d-flex flex-wrap">
      <% @lists.each do |list| %>
        <div class="border bg-light shadow me-3 my-3 py-5 lg-shadow px-3 rounded-3 d-flex justify-content-center align-items-center" style="width: 150px">
          <%= link_to list_path(list),class: "text-decoration-none  text-dark" do%>
            <%= list.name %>
          <% end %>
        </div>
      <% end %>
    </div>

  </div>
  <div class="col-4">
    <%= link_to new_list_path, class: "text-decoration-none" do %>
      <p class="btn btn-primary rounded-4 px-3 py-2">Create a movie list</p>
    <% end %>
  </div>
</div>
