

<div class="hero_banner d-flex flex-column align-items-center justify-content-center w-100 text-center">
  <h1 class="text-light"><%= @list.name %></h1>
</div>

<div class="container my-5">
  <div class="d-flex flex-row-reverse w-100">
    <%= link_to new_list_bookmark_path(@list)  do%>
      <p class="btn btn-primary rounded-4 d-flex justify-content-center align-items-center">Add a movie</p>
    <% end %>
  </div>
  <div class="d-flex flex-wrap">

    <% if @bookmarks.count > 0 %>
        <% @bookmarks.each do |f| %>
          <div class="card moviecard m-2 border shadow d-flex flex-column justify-content-between" style="width : 250px">
            <img src="<%= f.movie.poster_url%>" alt="<%= f.movie.title %>" class="w-100">
            <div class="p-3">
              <h3><%= f.movie.title %></h3>
              <p class="text-dark"><%= f.comment %></p>
            </div>
            <div class="d-flex justify-content-between px-3 py-2">
              <div class="d-flex justify-content-center align-items-center">
                <svg class="me-2"xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="#ffc71c" d="m12 17.275l-4.15 2.5q-.275.175-.575.15t-.525-.2t-.35-.437t-.05-.588l1.1-4.725L3.775 10.8q-.25-.225-.312-.513t.037-.562t.3-.45t.55-.225l4.85-.425l1.875-4.45q.125-.3.388-.45t.537-.15t.537.15t.388.45l1.875 4.45l4.85.425q.35.05.55.225t.3.45t.038.563t-.313.512l-3.675 3.175l1.1 4.725q.075.325-.05.588t-.35.437t-.525.2t-.575-.15z"/></svg>
                <p><%= f.movie.rating %></p>
              </div>
              <%= link_to bookmark_path(f), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 1024 1024"><path fill="#c4130e" d="M360 184h-8c4.4 0 8-3.6 8-8zh304v-8c0 4.4 3.6 8 8 8h-8v72h72v-80c0-35.3-28.7-64-64-64H352c-35.3 0-64 28.7-64 64v80h72zm504 72H160c-17.7 0-32 14.3-32 32v32c0 4.4 3.6 8 8 8h60.4l24.7 523c1.6 34.1 29.8 61 63.9 61h454c34.2 0 62.3-26.8 63.9-61l24.7-523H888c4.4 0 8-3.6 8-8v-32c0-17.7-14.3-32-32-32M731.3 840H292.7l-24.2-512h487z"/></svg>
              <% end %>
            </div>
          </div>
        <% end %>
    <% end %>
  </div>
</div>
</div>
